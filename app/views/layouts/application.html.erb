<!doctype html>
<html lang="en-US">
<head>
  <title><%= html_title yield(:title) %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag 'application' %>
  <meta name="author" content="<%= CONFIG['name'] %>">
  <link href="/posts.rss" rel="alternate" title="RSS" type="application/rss+xml" />
  <link href='http://fonts.googleapis.com/css?family=Lato:300,900' rel='stylesheet' type='text/css' />
</head>

<body class="<%= controller_name %> <%= action_name %>">
  <% unless @no_header %>
  <header>
    <h1><%= link_to CONFIG['title'], root_url %></h1>
    <span>
      <%= CONFIG['tagline'].html_safe %>
    </span>
    <ul>
      <% if CONFIG['twitter'] %>
        <li><%= link_to '@' + CONFIG['twitter'], 'http://twitter.com/' + CONFIG['twitter'] %></li>
      <% end %>
      <% if CONFIG['github'] %>
        <li><%= link_to 'github', 'https://github.com/' + CONFIG['github'] %></li>
      <% end %>
      <% if CONFIG['display_email'] %>
        <li><%= link_to 'say hi', "mailto:#{CONFIG['email']}?subject:whats up!" %></li>
      <% end %>
      <li><%= link_to 'rss feed', '/posts.rss' %></li>
    </ul>
    <span class="powered-by">
      Powered by <a href="http://github.com/natew/obtvse.git">Obtvse</a>&nbsp;&middot;&nbsp;
      <% if admin_signed_in? %>
        <%= link_to "Logout", destroy_admin_session_path %>
      <% else %>
        <% if (CONFIG['allow_registration'] == 'yes') %>
          <%= link_to "Sign Up", new_admin_registration_path %> or
        <% end %>
        <%= link_to "Sign In", new_admin_session_path %>
      <% end %>
  </span>

  </header>
  <% end %>

  <div id="container">
    <% unless @no_header %>
      <time>
        <% if admin_signed_in? %>
          <%= link_to 'New Draft', '/new', :class => 'button' %>
          <%= link_to 'Admin', '/admin', :class => 'button' %>
        <% elsif @post && @post.created_at %>
          Posted <%= @post.created_at.to_formatted_s(:day_month_year) %>
        <% else %>
          <%= Time.now.to_formatted_s(:day_month_year) %>
        <% end %>
      </time>
    <% end %>
    <div id="content">
      <% if notice %><span class="notice"><%= notice %></span><% end %>
      <% if alert %><span class="alert"><%= alert %></span><% end %>
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>

  <% if CONFIG['google_analytics_id'] %>
    <!-- Google Analytics -->
    <script>
      var _gaq=[['_setAccount','<%= CONFIG['google_analytics_id'] %>'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));
    </script>
  <% end %>
</body>
</html>
